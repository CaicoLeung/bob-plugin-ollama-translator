{
  "identifier": "bob-plugin-ollama-translator",
  "category": "translate",
  "version": "6.0.0",
  "name": "AI单词/翻译/百科解释",
  "summary": "调用本地Ollama服务离线，或通过ChatGPT或进行单词/翻译/百科解释",
  "author": "Caico",
  "homepage": "https://github.com/CaicoLeung/bob-plugin-ollama-translator",
  "appcast": "https://raw.githubusercontent.com/CaicoLeung/bob-plugin-ollama-translator/main/appcast.json",
  "minBobVersion": "1.8.0",
  "options": [
    {
      "identifier": "service",
      "type": "menu",
      "title": "服务",
      "defaultValue": "ollama",
      "desc": "选择服务",
      "menuValues": [
        {
          "title": "Ollama",
          "value": "ollama"
        },
        {
          "title": "OpenAI",
          "value": "openai"
        },
        {
          "title": "Grok",
          "value": "grok"
        },
        {
          "title": "Claude",
          "value": "claude"
        },
        {
          "title": "DeepSeek",
          "value": "deepseek"
        },
        {
          "title": "Gemini",
          "value": "gemini"
        },
        {
          "title": "其他",
          "value": "other"
        }
      ]
    },
    {
      "identifier": "baseUrl",
      "type": "text",
      "title": "Base URL",
      "desc": "选择其他服务时，请输入Base URL",
      "textConfig": {
        "type": "visible",
        "placeholderText": "例如: https://api.openai.com/v1/chat/completions"
      }
    },
    {
      "identifier": "apiKey",
      "type": "text",
      "title": "API KEY",
      "desc": "填写相应服务的的API KEY，Ollama不需要填写",
      "textConfig": {
        "placeholderText": "例如: sk-proj-1234567890"
      }
    },
    {
      "identifier": "pattern",
      "type": "menu",
      "title": "模式",
      "defaultValue": "translate",
      "desc": "选择翻译模式或解释模式",
      "menuValues": [
        {
          "title": "翻译模式",
          "value": "translate"
        },
        {
          "title": "解释模式",
          "value": "interpret"
        }
      ]
    },
    {
      "identifier": "prompt",
      "type": "text",
      "title": "prompt",
      "desc": "自定义prompt模式，在这里输入你的prompt。源语言为{sourceLang}，目标语言为{targetLang}，原文为{sourceText}。",
      "textConfig": {
        "type": "visible",
        "placeholderText": "请输入prompt"
      }
    },
    {
      "identifier": "model",
      "type": "menu",
      "title": "模型",
      "defaultValue": "qwen2.5:14b",
      "desc": "如果选择Ollama模型, 确保你本地已经安装相应模型。",
      "menuValues": [
        {
          "title": "自定义",
          "value": "custom"
        },
        {
          "title": "qwen2.5:32b",
          "value": "qwen2.5:32b"
        },
        {
          "title": "qwen2.5:14b",
          "value": "qwen2.5:14b"
        },
        {
          "title": "gemma3:27b",
          "value": "gemma3:27b"
        },
        {
          "title": "gemma3:12b",
          "value": "gemma3:12b"
        },
        {
          "title": "gpt-4o",
          "value": "gpt-4o"
        },
        {
          "title": "gpt-4o-mini",
          "value": "gpt-4o-mini"
        },
        {
          "title": "grok-3-beta",
          "value": "grok-3-beta"
        },
        {
          "title": "grok-3-mini-beta",
          "value": "grok-3-mini-beta"
        }
      ]
    },
    {
      "identifier": "customModel",
      "type": "text",
      "title": "自定义模型",
      "textConfig": {
        "type": "visible",
        "placeholderText": "例如: gpt-4o-mini"
      },
      "desc": "仅当模型为自定义时生效"
    }
  ]
}
